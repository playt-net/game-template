{
	"name": "game-template",
	"version": "1.0.50",
	"type": "module",
	"scripts": {
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check": "biome check --apply .",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"dev:server": "NODE_ENV=development bun run --watch src/server/server.ts",
		"server": "bun src/server/server.ts",
		"dev:client": "vite",
		"dev:all": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
		"build": "vite build",
		"start": "NODE_ENV=production bun run server"
	},
	"dependencies": {
		"@axiomhq/pino": "^1.3.1",
		"@bogeychan/elysia-logger": "^0.1.8",
		"@elysiajs/cors": "1.4.0",
		"@elysiajs/eden": "1.4.1",
		"@elysiajs/static": "1.4.0",
		"@playt/client": "^11.2.0",
		"phaser": "^3.88.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"pino-pretty": "^13.0.0",
		"seedrandom": "^3.0.5"
	},
	"devDependencies": {
		"elysia": "1.4.5",
		"@biomejs/biome": "^1.9.4",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@types/seedrandom": "^3.0.8",
		"@vitejs/plugin-react": "^4.3.4",
		"bun-types": "latest",
		"concurrently": "^9.1.2",
		"typescript": "^5.7.3",
		"tailwindcss": "^4.0.13",
		"vite": "^6.2.1",
		"zod": "^4.1.5",
		"remeda": "^2.31.1"
	}
}
